<br>
<p>
<div class="side_bio">
<%= image_tag('ak_fan.jpeg', :id => "bio_pic") %>
<p id="bio_mini"> 
	Andrew Kelly is an aspiring web developer currently living in Chicago. He recently became a novice apprentice at <%= link_to "8th Light", "http://www.8thlight.com" %>. 
</p>
<div id="tag cloud">
	<% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
		<%= link_to tag.name, tag_path(tag.name), class: css_class %>
	<% end %>
</div>	
</div>

<% @posts.each do |post| %>
  <h2 id="post_date"> 
    <%= link_to post.title, post_path(post) %> 
  </h2>
  <h3>
  	<%= post.created_at.in_time_zone('Central Time (US & Canada)').strftime("%B %d, %Y %l:%M%p") %>
  </h3>
  <p id="post_content"> 
  	<%= truncate_html(post.content, :length => 420, :word_boundary => true) %>
  </p>
  <p>
  	<%= link_to 'Continue Reading', post_path(post), :id => "continue_reading" %>
  </p>
  <p>
		Tags: <%= raw post.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %>
	</p>
	<% if session[:user_id] %>
		<%= link_to 'Edit', edit_post_path(post) %> 
	<% end %>
<% end %>

<% if session[:user_id] %>
	<%= link_to 'New Post', new_post_path, :id => "new_post" %>
<% end %>

<br />
<%= paginate @posts %>